extends ../layout

block title
	title Tests

block styles
	link(href='css/test-params-view.css', rel='stylesheet')
	link(href='css/all-tests-view.css', rel='stylesheet')
	//link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css") // for paginathing

block scripts


block content
	.page-wrapper
		.panel.panel-primary
			.panel-heading
				h3.panel-title Tests list
			ul.list-group
				each test in tests
					li.test-wrapper.list-group-item
						.test-params
							- var title = test.title;
							- var subject = test.subject;
							- var description = test.description;
							- var duration = test.duration;
							- var complexity = test.complexity;
							include _test-params
						button
							a(href="test" + test.id) PASS
block scripts-after-body
	script(src="http://code.jquery.com/jquery-1.12.4.min.js")
	script(type='text/javascript', src='scripts/paginathing.js')
	script(type='text/javascript').
		jQuery(document).ready(function ($) {
			$('.list-group').paginathing({
				perPage: 10,
				limitPagination: 10,
				containerClass: 'panel-footer'
			});
		});