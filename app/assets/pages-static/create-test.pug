extends ../../layout

block title
	title CYPI: create test

block styles
	link(rel="stylesheet" type="text/css" href="css/create-test.css")/

block scripts
	script(src="scripts/create-test.js")
	script(src="scripts/sending-test-data.js")

block scripts-after-body
	script.
		- onload();

block content
	div.content
		div#test-creation-head
			h2 Create your own test
			div.test-params-wrapper
				div.wrapper-param
					div
						label(for="test-title") Test title:
						input#test-title(type="text" placeholder="e.g. Super test" name="test-title")
				div.wrapper-param
					div
						label(for="test-subject") Subject:
						input#test-subject(type="text" placeholder="e.g. Algebra" name="test-subject")
				div.wrapper-param
					div
						label(for="test-description") Description (optional):
						textarea#test-description(rows="4" cols="30")
				div.wrapper-param
					div
						label(for="questions-number") Number of questions (1-50):
						input.change-questions-number(type="button" value="-3")
						input.change-questions-number(type="button" value="-1")
						input#questions-number(type="number" min="1" max="50" value="3" name="questions-number")
						input.change-questions-number(type="button" value="+1")
						input.change-questions-number(type="button" value="+3")
						input#submit-questions-number(type="button" value="OK")
				div.wrapper-param
					div
						label(for="test-complexity") Complexity (%):
						input#test-complexity(type="number" min="1" max="100" value="50" name="test-complexity")
				div.wrapper-param
					div
						label(for="test-duration") Duration (sec):
						input#test-duration(type="number" min="10" max="3600" value="60" name="test-duration")
			div#test-creation-body
				<!-- List of questions generated by JS -->
			div#test-creation-after(hidden)
				div.buttons-wrapper
					div.button-wrapper
						button.action-button#test-submit Submit
					div.button-wrapper
						button.action-button#test-cancel(disabled) Cancel
					div.button-wrapper
						button.action-button#test-save-draft(disabled) Save as draft
		<!-- TODO: add other actions(sharing in soc. media, etc.) -->
